#left_content
  = render 'left'
#right_content
  %h1
    Showing Attendance Configuration
    = link_to image_tag('/assets/edit.png',:title => "Edit Configuration"), edit_attendance_configuration_path(@attendance_configuration)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>200} Attendance:&nbsp;
                  %td= @attendance_configuration.attendance
                %tr
                  %td{:width=>200} Salary Calendar Days (NWD):&nbsp;
                  %td= @attendance_configuration.salary_calendar_days
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Short Name:&nbsp;
                  %td= @attendance_configuration.short_name
