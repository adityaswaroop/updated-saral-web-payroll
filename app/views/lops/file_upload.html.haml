= form_tag lops_path do
  %table{:cellpadding => "0", :cellspacing => "0", :width => "20%"}
    %tr
      %td Employee ID
      %td Month Year
      %td LOP
    - @lines.each do |line|
      %tr
        %td= line[0]
        %td= line[1]
        %td= line[2]
      %tr
        %td
          %input{:name => "lines[][employee_id]", :value => line[0], :type => "hidden"}
        %td
          %input{:name => "lines[][month_year]", :value => line[1], :type => "hidden"}
        %td
          %input{:name => "lines[][lop]", :value => line[2], :type => "hidden"}
    %tr
      %td &nbsp;
    %tr
      %td= submit_tag("Update Lop")