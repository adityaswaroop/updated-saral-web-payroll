#left_content
  = render 'left'
#right_content
  %h1 Listing HR Categories
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td &nbsp;
    %tr
      %td.std_td
        %table.table_grid{:width=>757, :cellpadding => 0, :cellspacing => 3}
          %tr
            %td.table_grid_header Category name
            %td.table_grid_header{:colspan => 4} Operations
          - @hr_categories.each do |hr_category|
            %tr{:class => "#{cycle('table_grid_odd_row', 'table_grid_even_row')}"}
              %td.table_grid_td= hr_category.category_name
              %td.table_grid_icon= link_to image_tag('/assets/edit.png',:title => "Edit HR Category"), edit_hr_category_path(hr_category)
              %td.table_grid_icon= link_to image_tag('/assets/delete.png',:title => "Destroy HR Category"), hr_category, confirm: 'Are you sure?', method: :delete
              %td.table_grid_icon= link_to image_tag('/assets/settings.png',:title => "View Hr Category Details"), hr_category_details_path(:param1=>hr_category.id)
        %br/
        .digg_pagination
          .page_info
            = page_entries_info @hr_categories
          = will_paginate @hr_categories, :container => false
    %tr
      %td &nbsp;
