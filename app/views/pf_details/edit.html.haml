#left_content
  %ul
    %li= link_to 'Back', @branch
#right_content
  %h1= "Create new PF Group Details for Branch #{@pf_detail.branch_branch_name}"
  = form_for [@branch, @pf_detail] do |f|
    - if @pf_detail.errors.any?
      #error_explanation
        %h2
          = pluralize(@pf_detail.errors.count, "error")
          prohibited this branch pf details from being saved:
        %ul
          - @pf_detail.errors.full_messages.each do |msg|
            %li= msg
    %table.std_table{:cellpadding=>0,:cellspacing=>0}
      %tr
        %td
          %table
            %tr
              %td.std_td
                %table
                  %tr
                    %td{:width=>130} PF Group:&nbsp;
                    %td= @pf_detail.pf_group_pf_group
                  %tr
                    %td{:width=> 130} Effective Date:&nbsp;
                    %td= f.text_field :pf_effective_date, :id=>"pf_effective_date", :class=>"date_input", :include_blank => true,  :start_year => 1920, :end_year => 2010
                  %tr
                    %td &nbsp;
                  %tr
                    %td= submit_tag "Save"