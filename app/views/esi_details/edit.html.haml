#left_content
  %ul
    %li= link_to 'Back', @branch
#right_content
  %h1= "Create new ESI Group Details for Branch #{@esi_detail.branch_branch_name}"
  = form_for [@branch, @esi_detail] do |f|
    - if @esi_detail.errors.any?
      #error_explanation
        %h2
          = pluralize(@esi_detail.errors.count, "error")
          prohibited this branch esi details from being saved:
        %ul
          - @esi_detail.errors.full_messages.each do |msg|
            %li= msg
    %table.std_table{:cellpadding=>0,:cellspacing=>0}
      %tr
        %td
          %table
            %tr
              %td.std_td
                %table
                  %tr
                    %td{:width=>130} PF Group:&nbsp;
                    %td= @esi_detail.esi_group_esi_group_name
                  %tr
                    %td{:width=> 130} Effective Date:&nbsp;
                    %td= f.text_field :esi_effective_date, :id=>"esi_effective_date", :class=>"date_input", :include_blank => true,  :start_year => 1920, :end_year => 2010
                  %tr
                    %td &nbsp;
                  %tr
                    %td= submit_tag "Save"
