#left_content
  %ul
    %li= link_to 'Add New Grade', new_grade_path
#right_content
  %h1 Listing Grades
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td &nbsp;
    %tr
      %td.std_td
        %table.table_grid{:width=>500, :cellpadding => 0, :cellspacing => 3}
          %tr
            %td{:colspan=>4}
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"
          %tr
            %td.table_grid_header{:width=> 360} Grade
            %td.table_grid_header{:colspan =>3} Operations
          - @grades.each do |grd|
            %tr{:class => "#{cycle('table_grid_odd_row', 'table_grid_even_row')}"}
              %td.table_grid_td= grd.grade
              %td.table_grid_icon= link_to image_tag('/assets/edit.png',:title => "Edit Department"), edit_grade_path(grd)
              %td.table_grid_icon= link_to image_tag('/assets/delete.png',:title => "Destroy Department"), grd, confirm: 'Are you sure?', method: :delete
        %br/
        .digg_pagination
          .page_info
            = page_entries_info @grades
          = will_paginate @grades, :container => false
    %tr
      %td &nbsp;
