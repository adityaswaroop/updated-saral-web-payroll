#left_content
  = render 'left'
#right_content
  %h1 Listing Leave takens
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td &nbsp;
    %tr
      %td{:colspan=>4}
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
    %tr
      %td.std_td
        %table.table_grid{:width=>500, :cellpadding => 0, :cellspacing => 3}
          %tr
            %td.table_grid_header Employee
            %td.table_grid_header Effective date
            %td.table_grid_header Leave Count
            %td.table_grid_header LOP Count
            %td.table_grid_header{:colspan =>2} Operations
          - @leave_takens.each do |leave_taken|
            %tr{:class => "#{cycle('table_grid_odd_row', 'table_grid_even_row')}"}
              %td.table_grid_td= leave_taken.employee_id
              %td.table_grid_td= l leave_taken.from_date, :format=>:default
              %td.table_grid_td= leave_taken.count
              %td.table_grid_td= leave_taken.lop_count
              %td.table_grid_icon= link_to image_tag('/assets/edit.png',:title => "Edit Detail"), edit_leave_taken_path(leave_taken)
              %td.table_grid_icon= link_to image_tag('/assets/delete.png',:title => "Destroy Detail"), leave_taken, confirm: 'Are you sure?', method: :delete
        %br/
        .digg_pagination
          .page_info
            = page_entries_info @leave_takens
          = will_paginate @leave_takens, :container => false
    %tr
      %td &nbsp;
