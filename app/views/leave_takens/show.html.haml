#left_content
  %ul
    %li= link_to 'Back', leave_takens_path
    %li= link_to 'Edit ', edit_leave_taken_path(@leave_taken)
#right_content
  %table
    %tr
      %td{:colspan=>4}
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
  %h1
    Leave Details
    = link_to image_tag('/assets/edit.png',:title => "Edit Leave Detail"), edit_leave_taken_path(@leave_taken)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Employee:&nbsp;
                  %td= @leave_taken.employee_id
                %tr
                  %td{:width=>130} Date:&nbsp;
                  %td= @leave_taken.from_date
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Count:&nbsp;
                  %td= @leave_taken.count
