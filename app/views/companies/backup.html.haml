#left_content
    - if @company
        %ul
            %li= link_to 'Back', companies_path
#right_content
    %h1
        Previous Backups
    %table.std_table{:cellpadding=>0,:cellspacing=>0}
        %tr
            %td
                %table
                    %tr
                        %td.table_grid_header Backup On
                        %td.table_grid_header File Hash
                        %td.table_grid_header Employees Count
                        %td.table_grid_header Last Salary Calculated On
                        %td.table_grid_header Backup Option
                    -@backup_utils.each do |bck_util|
                        %tr{:class => "#{cycle('table_grid_odd_row', 'table_grid_even_row')}"}
                            %td.table_grid_td=l bck_util.backup_date, :format => :default
                            %td.table_grid_td= bck_util.file_hash
                            %td.table_grid_td= bck_util.employees_count
                            %td.table_grid_td=l bck_util.last_sal_calculated, :format => :type2
                            %td.table_grid_td= bck_util.backup_option
    %h1
        Select Backup Option
    = form_tag backup_option_companies_path do |f|
        %table.std_table{:cellpadding=>0,:cellspacing=>0}
            %tr
                %td
                    %table
                        -["Schema", "Skeleton", "Schema with data", "Data Only"].each do |bkp_optn|
                            %tr
                                %td
                                    = radio_button_tag "backup_option", bkp_optn
                                    #{bkp_optn}
                        %tr
                            %td &nbsp;
                        %tr
                            %td= submit_tag "Generate Backup"