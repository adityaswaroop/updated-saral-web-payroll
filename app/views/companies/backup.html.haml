#left_content
    - if @company
        %ul
            %li= link_to 'Back', companies_path
#right_content
    %h1
        Select Backup Option
    = form_tag backup_option_companies_path do |f|
        %table.std_table{:cellpadding=>0,:cellspacing=>0}
            %tr
                %td
                    %table
                        -["Schema", "Skeleton", "Schema with data", "Data Only"].each do |bkp_optn|
                            %tr
                                %td
                                    = radio_button_tag "backup_option", bkp_optn
                                    #{bkp_optn}
                        %tr
                            %td &nbsp;
                        %tr
                            %td= submit_tag "Generate Backup"