#left_content
  %ul
    %li= link_to 'Back', leave_details_path
    %li= link_to 'Edit ', edit_leave_detail_path(@leave_detail)
#right_content
  %table
    %tr
      %td{:colspan=>4}
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
  %h1
    Leave Details
    = link_to image_tag('/assets/edit.png',:title => "Edit Leave Detail"), edit_leave_detail_path(@leave_detail)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>130} employee_id:&nbsp;
                  %td= @leave_detail.employee_id
                %tr
                  %td{:width=>130} leave_date:&nbsp;
                  %td= @leave_detail.leave_date
            %td.std_td
              %table
                %tr
                  %td{:width=>130} leave_definition_id:&nbsp;
                  %td= @leave_detail.leave_definition_id


