#left_content
  %ul
    %li= link_to 'Back', employees_path
#right_content

  -if @employeesList.blank?
    %h1 No New Employee To Restrict
  -else
    %h1 Restrict Employees PF Contribution

    %table.std_table{:cellpadding=>0,:cellspacing=>0}
      %tr
        %td &nbsp;
      %tr
        %td.std_td
          = render 'search', :srchpath => @srchpath
      %tr
        %td.std_td
          =form_tag pf_restrict_update_employees_path,:id=>"RestrictPFESIForm", :method => :PUT do
            %table
              %tr
                %td
                  %div{:style=>"overflow-Y:scroll;height:200px;", :id => "employees"}
                    =render 'pfemployees', :collection => @employeesList
              %tr
                %td &nbsp;
              %tr
                %td= submit_tag "Save Changes"


