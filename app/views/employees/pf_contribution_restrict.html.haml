-@search_path=pf_contribution_restrict_employees_path
#left_content
  = render 'left'
#right_content

  -if @employeesList.blank?
    %h1 No New Employee To Restrict
  -else
    %h1 Restrict Employees PF Contribution

    %table.std_table{:cellpadding=>0,:cellspacing=>0}
      %tr
        %td &nbsp;
      %tr
        %td.std_td
          = render 'pfEmpSearch'
      %tr
        %td.std_td

          =form_tag pf_restrict_update_employees_path, :method => :PUT do
            %table
              %tr
                %td
                  %div{:style=>"overflow-Y:scroll;height:200px;", :id => "employees"}
                    =render 'employees'
              %tr
                %td= submit_tag "Save Changes"

            %br/

      %tr
        %td &nbsp;
