#left_content
  = render 'left'
#right_content
  - unless @errors.empty?
    %h1{:style => "background-color:#e9322d"} Failure
    %ul
      - @errors.each do |error|
        %li
          Problems in line number #{error[0]}:
          - error[1].full_messages.each do |msg|
            %p
              = msg