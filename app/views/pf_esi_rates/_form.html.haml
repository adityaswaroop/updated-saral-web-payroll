= form_for(@pfesirate) do |f|
  - if @pfesirate.errors.any?
    #error_explanation
      %h2
        = pluralize(@pfesirate.errors.count, "error")
        prohibited this PF/ESI rate from being saved:
      %ul
        - @pfesirate.errors.full_messages.each do |msg|
          %li= msg
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td.std_td
        %table
          %tr
            %td{:width=>160} Month Year
            - if params[:id]
              %td= @pfesirate.paymonth.month_name
            - else
              %td= select_tag "pf_esi_rate[paymonth_id]", options_from_collection_for_select(Paymonth.order('id ASC'),'id','month_name', params[:month_year]),:prompt => 'Select Month Year'
    %tr
      %td.std_td
        %table
          %tr
            %td{:colspan=>2,:class=>'form_title'} Provident Fund
          %tr
            %td{:width=>130} EPF(A) Rate (%) :&nbsp;
            %td= f.text_field :pf_rate, :size => '22'
          %tr
            %td{:width=>130} Cutoff :&nbsp;
            %td= f.text_field :pf_cutoff, :size => '22'
      %td.std_td
        %table
          %tr
            %td{:colspan=>2,:class=>'form_title'} Employee State Information
          %tr
            %td{:width=>130} Employee (%) : &nbsp;
            %td= f.text_field :esi_employee_rate, :size => '22'
          %tr
            %td{:width=>130} Employer (%) : &nbsp;
            %td= f.text_field :esi_employer_rate, :size => '22'
          %tr
            %td{:width=>130} Cutoff : &nbsp;
            %td= f.text_field :esi_cutoff, :size => '22'
    %tr
      %td.std_td
        %table
          %tr
            %td= f.submit("Save PF ESI Rate")
