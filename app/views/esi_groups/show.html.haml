#left_content
  = render 'left'
#right_content
  %h1
    Showing ESI Group
    = link_to image_tag('/assets/edit.png',:title => "Edit PT Group"), edit_esi_group_path(@esi_group)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>130} ESI Group Name :&nbsp;
                  %td= @esi_group.esi_group_name
                %tr
                  %td{:width=>130} Address :&nbsp;
                  %td= @esi_group.address
            %td.std_td
              %table
                %tr
                  %td{:width=>130} ESI No :&nbsp;
                  %td= @esi_group.esi_no
                %tr
                  %td{:width=>130} ESI Local Office :&nbsp;
                  %td= @esi_group.esi_local_office
