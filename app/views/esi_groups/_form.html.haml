= form_for(esi_group) do |f|
  - if esi_group.errors.any?
    #error_explanation
      %h2
        = pluralize(esi_group.errors.count, "error")
        prohibited this pt_group from being saved:
      %ul
        - esi_group.errors.full_messages.each do |msg|
          %li= msg
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>130} ESI Group Name :&nbsp;
                  %td= f.text_field :esi_group_name, :size => '22'
                %tr
                  %td{:width=>130} Address :&nbsp;
                  %td= f.text_field :address, :size => '22'
            %td.std_td
              %table
                %tr
                  %td{:width=>130} ESI No :&nbsp;
                  %td= f.text_field :esi_no, :size => '22'
                %tr
                  %td{:width=>130} ESI Local Office :&nbsp;
                  %td= f.text_field :esi_local_office, :size => '22'
          %tr
            %td.std_td{:colspan=>2}
              %table
                %tr
                  %td &nbsp;
                %tr
                  %td= f.submit("Save ESI Group")