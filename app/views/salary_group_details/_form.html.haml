= form_for(@salary_group_detail) do |f|
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td{:colspan=>4}
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"
          %tr
            %td.std_td
              %table
                = f.hidden_field :salary_group_id, :value => @param_sal_grp_id
                %tr
                  %td{:width=>130} Salary Head:&nbsp;
                  %td= f.collection_select :salary_head_id, SalaryHead.all, :id, :head_name, :prompt => "Select Salary Head"
                %tr
                  %td{:width=>130} Based On:&nbsp;
                  %td= f.select :based_on, options_for_select(["Pay Days","Present Days","Independent Days"],        @salary_group_detail.based_on), {:prompt => 'Select'}
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Calculation Type:&nbsp;
                  %td= f.select :calc_type, options_for_select(["Formula","Lumpsum","Every Month"],@salary_group_detail.calc_type),  {:prompt => 'Select Type'}
                  %tr
                    %td{:width=>130} Calculation:&nbsp;
                    %td= f.text_area :calculation, :rows => 3, :cols => 30
          %tr
            %td.std_td{:colspan=>2}
              %table
                %tr
                  %td &nbsp;
                %tr
                  %td{:colspan=>2}= f.submit