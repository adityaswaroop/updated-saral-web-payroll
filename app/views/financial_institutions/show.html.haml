#left_content
  = render 'left'
#right_content
  %h1{:style=>"width:450px"}
    Showing Financial Institution (Bank)
    = link_to image_tag('/assets/edit.png',:title => "Edit Financial Institution"), edit_financial_institution_path(@financial_institution)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td{:colspan=>2}
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Name:&nbsp;
                  %td= @financial_institution.name
                %tr
                  %td{:width=>130} Address:&nbsp;
                  %td= @financial_institution.address_line1
                %tr
                  %td{:width=>130} &nbsp;
                  %td= @financial_institution.address_line2
                %tr
                  %td{:width=>130} &nbsp;
                  %td= @financial_institution.address_line3
                %tr
                  %td{:width=>130} &nbsp;
                  %td= @financial_institution.address_line4
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Pin Code:&nbsp;
                  %td= @financial_institution.pincode
                %tr
                  %td{:width=>130} Branch/MICR Code:&nbsp;
                  %td= @financial_institution.branch_code
                %tr
                  %td{:width=>130} Email:&nbsp;
                  %td= @financial_institution.email