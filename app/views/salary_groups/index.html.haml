=link_to 'Home', root_url
%h1 Listing Salary Groups
%table{:width => 500, :cellpadding => 0, :cellspacing => 0, :border => 1}
  %tr
    %th Salary Group Name
    %th Based on Gross
    %th{:colspan => 3} Operations
  - @salary_groups.each do |salary_group|
    %tr
      %td= salary_group.salary_group_name
      %td= salary_group.based_on_gross
      %td= link_to 'Show', salary_group
      %td= link_to 'Edit', edit_salary_group_path(salary_group)
      %td= link_to 'Destroy', salary_group, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Salary Group', new_salary_group_path
