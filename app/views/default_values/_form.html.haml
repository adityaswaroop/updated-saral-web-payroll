= form_for(@default_value) do |f|
  - if @default_value.errors.any?
    #error_explanation
      %h2
        = pluralize(@default_value.errors.count, "error")
        prohibited this default_value from being saved:
      %ul
        - @default_value.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :default_type
    %br/
    = f.text_field :default_type
  .field
    = f.label :value
    %br/
    = f.text_field :value
  .field
    = f.label :value_id
    %br/
    = f.number_field :value_id
  .actions
    = f.submit
