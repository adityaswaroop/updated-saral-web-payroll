#left_content
  = render 'left'
#right_content
  %h1
    Showing PF Group
    = link_to image_tag('/assets/edit.png',:title => "Edit PF Group"), edit_pf_group_path(@pf_group)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td{:colspan=>2}
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Branch:&nbsp;
                  %td= @branch.branch_name
                %tr
                  %td{:width=>130} Address:&nbsp;
                  %td= @branch.address
                %tr
                  %td{:width=>130} PF Group:&nbsp;
                  %td= @branch.pf_group.pf_group
                %tr
                  %td{:width=>130} ESI Applicable:&nbsp;
                  %td= @branch.esi_applicable
                -if @branch.esi_applicable == true
                  %tr
                    %td{:width=>130} ESI Group:&nbsp;
                    %td= @branch.esi_group.esi_group_name
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Responsible Person:&nbsp;
                  %td= @branch.responsible_person
                %tr
                  %td &nbsp;
                %tr
                  %td{:width=>130} PT Group:&nbsp;
                  %td= @branch.pt_group.name
                %tr
                  %td &nbsp;