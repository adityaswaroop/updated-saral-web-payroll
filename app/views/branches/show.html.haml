#left_content
  %ul
    %li= link_to 'Back', branches_path
    %li= link_to 'Edit Branch', edit_branch_path(@branch)
#right_content
  %h1
    Showing Branch
    = link_to image_tag('/assets/edit.png',:title => "Edit Branch"), edit_branch_path(@branch)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td{:colspan=>2}
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Branch:&nbsp;
                  %td= @branch.branch_name
                %tr
                  %td{:width=>130} Address:&nbsp;
                  %td= @branch.address
                %tr
                  %td{:width=>130} PF Group:&nbsp;
                  - pf_group_name = @branch.pf_detail
                  - if pf_group_name
                    %td= pf_group_name.pf_group.pf_group
                    %td= link_to 'Change PF Group', new_branch_pf_detail_path(:branch_id => @branch.id)
                  - else
                    %td &nbsp;
                    %td= link_to 'Assign PF Group', new_branch_pf_detail_path(:branch_id => @branch.id)
                %tr
                  %td{:width=>130} ESI Group:&nbsp;
                  - esi_group_name = @branch.esi_detail
                  - if esi_group_name
                    %td= esi_group_name.esi_group.esi_group_name
                    %td= link_to 'Change ESI Group', new_branch_esi_detail_path(:branch_id => @branch.id)
                  - else
                    %td &nbsp;
                    %td= link_to 'Assign ESI Group', new_branch_esi_detail_path(:branch_id => @branch.id)
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Responsible Person:&nbsp;
                  %td= @branch.responsible_person
                %tr
                  %td &nbsp;
                %tr
                  %td{:width=>130} PT Group:&nbsp;
                  - pt_group_name = @branch.pt_detail
                  - if pt_group_name
                    %td= pt_group_name.pt_group.name
                    %td= link_to 'Change PT Group', new_branch_pt_detail_path(:branch_id => @branch.id)
                  - else
                    %td &nbsp;
                    %td= link_to 'Assign PT Group', new_branch_pt_detail_path(:branch_id => @branch.id)
                %tr
                  %td &nbsp;