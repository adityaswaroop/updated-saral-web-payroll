#left_content
  = render 'left'
#right_content
  %h1
    Showing PT Group
    = link_to image_tag('/assets/edit.png',:title => "Edit PT Group"), edit_pt_group_path(@pt_group)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td{:width=>130} PT Group Name :&nbsp;
                  %td= @pt_group.name
                %tr
                  %td{:width=>160} State
                  %td= @pt_group.state.state_name
                %tr
                  %td{:width=>130} Address :&nbsp;
                  %td= @pt_group.address
            %td.std_td
              %table
                %tr
                  %td{:width=>130} Certificate No :&nbsp;
                  %td= @pt_group.certificate_no
                %tr
                  %td{:width=>130} PTO Circle No :&nbsp;
                  %td= @pt_group.pto_circle_no
                %tr
                  %td{:width=>130} Return Period :&nbsp;
                  %td= @pt_group.return_period