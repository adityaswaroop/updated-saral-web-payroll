= form_for(@state) do |f|
  - if @state.errors.any?
    #error_explanation
      %h2
        = pluralize(@state.errors.count, "error")
        prohibited this state from being saved:
      %ul
        - @state.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :state_name
    %br/
    = f.text_field :state_name
  .actions
    = f.submit
