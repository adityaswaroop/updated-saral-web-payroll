= form_for(@state) do |f|
  - if @state.errors.any?
    #error_explanation
      %h2
        = pluralize(@state.errors.count, "error")
        prohibited this state from being saved:
      %ul
        - @state.errors.full_messages.each do |msg|
          %li= msg
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td State Name:&nbsp;
                  %td= f.text_field :state_name, :size => '22'
                %tr
                  %td &nbsp;
                %tr
                  %td{:colspan=>2}= f.submit
