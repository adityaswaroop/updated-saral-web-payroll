= link_to 'Home', root_path
%h1 Listing States
%table{:width => 300, :cellpadding => 0, :cellspacing => 0, :border => 1}
  %tr
    %th State Name
    %th{:colspan =>3} Operations
  - @states.each do |state|
    %tr
      %td= state.state_name
      %td= link_to 'Show', state
      %td= link_to 'Edit', edit_state_path(state)
      %td= link_to 'Destroy', state, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New State', new_state_path