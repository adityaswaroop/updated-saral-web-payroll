#left_content
  = render 'left'
#right_content
  %h1
    Showing ESI Group Rate
    = link_to image_tag('/assets/edit.png',:title => "Edit ESI Group Rate"), edit_esi_group_rate_path(@esi_group_rate)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td Esi group:&nbsp;
                  %td= @esi_group_rate.esi_group_id
                %tr
                  %td Employee rate:&nbsp;
                  %td= @esi_group_rate.employee_rate
                %tr
                  %td Employer rate:&nbsp;
                  %td= @esi_group_rate.employer_rate
                %tr
                  %td Cut off:&nbsp;
                  %td= @esi_group_rate.cut_off
                %tr
                  %td Minimum limit(daily wage):&nbsp;
                  %td= @esi_group_rate.minimum_limit_dailywage
                %tr
                  %td Round off:&nbsp;
                  %td= @esi_group_rate.round_off
