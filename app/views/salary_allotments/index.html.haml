#left_content
  = render 'left'
#right_content
  %h1 Salary Allotment Employee-wise
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td.std_td
        .tabber
          .tabbertab
            %h2 Listing Employee (Salary not Allotted)
            %div
              %table.table_grid{:width=>757, :cellpadding => 0, :cellspacing => 3}
                %tr
                  %td.table_grid_header Ref No
                  %td.table_grid_header Employee Name
                  %td.table_grid_header DOJ
                  %td.table_grid_header Designation
                  %td.table_grid_header Department
                  %td.table_grid_header Operation
                - @need_to_allot_Sal.each do |not_allot_sal|
                  %tr{:class => "#{cycle('table_grid_odd_row', 'table_grid_even_row')}"}
                    %td.table_grid_td= not_allot_sal.refno
                    %td.table_grid_td= not_allot_sal.empname
                    %td.table_grid_td= not_allot_sal.date_of_joining
                    %td.table_grid_td= Department.find(not_allot_sal.department_id).department
                    %td.table_grid_td= Designation.find(not_allot_sal.designation_id).designation
                    %td.table_grid_icon= link_to "Allot Salary", edit_salary_allotment_path(not_allot_sal.id)
            .digg_pagination
              .page_info
                = page_entries_info @need_to_allot_Sal
              = will_paginate @need_to_allot_Sal, :container => false
          .tabbertab
            %h2 Listing Employee (Salary Allotted)
            %div
              %table.table_grid{:width=>757, :cellpadding => 0, :cellspacing => 3}
                %tr
                  %td.table_grid_header Ref No
                  %td.table_grid_header Employee Name
                  %td.table_grid_header DOJ
                  %td.table_grid_header Department
                  %td.table_grid_header Designation
                  %td.table_grid_header Operation
                - @already_allot_Sal.each do |allotted_sal|
                  %tr{:class => "#{cycle('table_grid_odd_row', 'table_grid_even_row')}"}
                    %td.table_grid_td= allotted_sal.refno
                    %td.table_grid_td= allotted_sal.empname
                    %td.table_grid_td= allotted_sal.date_of_joining
                    %td.table_grid_td= Department.find(allotted_sal.department_id).department
                    %td.table_grid_td= Designation.find(allotted_sal.designation_id).designation
                    %td.table_grid_icon= link_to image_tag('/assets/edit.png',:title => "Edit Allotted Salary"), edit_salary_allotment_path(allotted_sal.id)
            .digg_pagination
              .page_info
                = page_entries_info @already_allot_Sal
              = will_paginate @already_allot_Sal, :container => false


