= form_for(paymonth) do |f|
  - if paymonth.errors.any?
    #error_explanation
      %h2
        = pluralize(paymonth.errors.count, "error")
        prohibited this Pay Month from being saved:
      %ul
        - paymonth.errors.full_messages.each do |msg|
          %li= msg
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td Month Name:&nbsp;
                  %td
                    = f.text_field :month_name, :size => '22'
                %tr
                  %td &nbsp;
                  %td{:class => 'msg'} (e.g. "Jan/2012")
                %tr
                  %td &nbsp;
                %tr
                  %td{:colspan=>2}= f.submit
