#left_content
  = render 'left'
#right_content
  %h1
    Showing Pay Month
    = link_to image_tag('/assets/edit.png',:title => "Edit Pay Month"), edit_paymonth_path(@paymonth)
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td Month Year:&nbsp;
                  %td= @paymonth.month_year
                %tr
                  %td Form Date:&nbsp;
                  %td= @paymonth.from_date
                %tr
                  %td Month Name:&nbsp;
                  %td= @paymonth.month_name
            %td.std_td
              %table
                %tr
                  %td Number of days:&nbsp;
                  %td= @paymonth.number_of_days
                %tr
                  %td To Date:&nbsp;
                  %td= @paymonth.to_date