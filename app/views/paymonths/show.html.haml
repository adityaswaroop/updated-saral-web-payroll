#left_content
  %ul
    %li= link_to 'Back', paymonths_path
#right_content
  %h1
    Showing Pay Month
  %table.std_table{:cellpadding=>0,:cellspacing=>0}
    %tr
      %td
        %table
          %tr
            %td.std_td
              %table
                %tr
                  %td Month Name:&nbsp;
                  %td= @paymonth.month_name
                %tr
                  %td Form Date:&nbsp;
                  %td
                    - if @paymonth.from_date?
                      = l @paymonth.from_date, :format => Global.instance.date_format_type
                    - else
                      = @paymonth.from_date
                %tr
                  %td Month Locked:&nbsp;
                  %td= @paymonth.month_locked == "true" ? 'Yes':'No'
                %tr
                  %td Salary Calculated:&nbsp;
                  %td= @paymonth.salary_calculated
            %td.std_td
              %table
                %tr
                  %td Number of days:&nbsp;
                  %td= @paymonth.number_of_days
                %tr
                  %td To Date:&nbsp;
                  %td
                    - if @paymonth.to_date?
                      = l @paymonth.to_date, :format => Global.instance.date_format_type
                    - else
                      = @paymonth.to_date
                %tr
                  %td Default Month:&nbsp;
                  %td= @paymonth.default_month == "true" ? 'Yes':'No'